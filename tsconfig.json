{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@branch/*": ["src/branch/*"],
      "@account/*": ["src/account/*"],
      "@employee/*": ["src/employee/*"],
      "@customer/*": ["src/customer/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src"]
}
